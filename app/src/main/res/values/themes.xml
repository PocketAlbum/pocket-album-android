<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PocketAlbum" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="ImageTools">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ImageTools.Label">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ActivityTitle">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActivityText">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextWarning">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/redDark</item>
    </style>
    <style name="ActivityRoot">
        <item name="android:background">@color/bluePrimary</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="ButtonPrimary">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DialogWindowPrimary">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>