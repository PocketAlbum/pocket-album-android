<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PocketAlbum" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/text</item>
        <item name="android:thumbTint">@color/text</item>
    </style>

    <style name="ImageTools">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ImageTools.Label">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ActivityTitle">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActivityText">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PanelTitle">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="PanelText">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PropertyText">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextWarning">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/redDark</item>
    </style>
    <style name="ActivityRoot">
        <item name="android:background">@color/bluePrimary</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="ButtonPrimary">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonPrimary.Small" parent="ButtonPrimary">
        <item name="android:minHeight">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ButtonSecondary" parent="ButtonPrimary">
        <item name="android:background">@drawable/background_primary</item>
    </style>
    <style name="ButtonSecondary.Small" parent="ButtonSecondary">
        <item name="android:minHeight">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:tint">@color/text</item>
    </style>
    <style name="ButtonMenu">
        <item name="android:background">@color/background</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawableTint">@color/text</item>
    </style>
    <style name="DialogWindowPrimary">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>